<h1>Listing drafts</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Blurb</th>
      <th>Body</th>
      <th>Status</th>
      <th>Idea</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drafts.each do |draft| %>
      <tr>
        <td><%= draft.number %></td>
        <td><%= draft.title %></td>
        <td><%= draft.blurb %></td>
        <td><%= draft.body %></td>
        <td><%= draft.status %></td>
        <td><%= draft.idea_id %></td>
        <td><%= link_to 'Show', draft %></td>
        <td><%= link_to 'Edit', edit_draft_path(draft) %></td>
        <td><%= link_to 'Destroy', draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

